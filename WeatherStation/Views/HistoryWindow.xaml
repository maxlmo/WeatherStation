<Window x:Class="WeatherStation.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherStation.Views"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="500" Width="300">
    <Grid>
        <ListView x:Name="dataview" Margin="5,5,5,5" Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Measurements}">
            <ListView.View>
                <GridView x:Name="grdNames">
                    <GridViewColumn Header="Date" Width="80" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Time" Width="80"  DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="Value" Width="80"  DisplayMemberBinding="{Binding RoundedValue}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>